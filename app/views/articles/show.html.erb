<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-6 neta">
    <p><strong>元ネタ:</strong><%= link_to @article.url, @article.url %></p>
  </div>
  
  <div class="pull-right">
    <ul class="pager">
      <li>
        <% if @hasPrevious == true then %>
          <%= link_to "Previous", previousPage_path(@article.id) %>
        <% else %>
          This is First
        <% end %>
      </li>
      <li>
        <% if @hasNext == true then %>
          <%= link_to "Next", nextPage_path(@article.id) %>
        <% else %>
          This is Last
        <% end %>
      </li>
    </ul>
  </div>
</div>


<div class="row"></div>
<hr>
<%= @article.html_body.html_safe %>

<% content_for :navPills do %>
    <div class="nav navbar-nav hidden-xs navbar-right" style="margin-top: 7.5px; margin-right: 0px;">
      <ul class="nav nav-pills">
        <li role="presentation"><%= link_to '一覧', '/articles' %></li>
        <li role="presentation"><a href='/articles/calendar'>カレンダー</a></li>
      </ul>
    </div>
<% end %>
