<div class="row">
<h3>新着記事一覧</h3>
  <!--<%= page_entries_info @articles %>-->
  <hr>
  
  <div id="articles">
    <div class="page">
      <%= render @articles %>
    </div>
  </div>
<br>
<%= paginate @articles , remote: true %>

</div>

<% content_for :navPills do %>
    <div class="nav navbar-nav  navbar-right" style="margin-top: 7.5px; margin-right: 0px;">
      <ul class="nav nav-pills">
        <li role="presentation"  class="active"><%= link_to '一覧', '/articles' %></li>
        <li role="presentation"><a href='/articles/calendar'>カレンダー</a></li>
      </ul>
    </div>
<% end %>

<script>
  $(function(){
    $("#articles .page").infinitescroll({
        debug: true,
        loading: {
          //img:     "http://www.mytreedb.com/uploads/mytreedb/loader/ajax_loader_blue_48.gif",
          msgText: "ロード中..."
        },
        navSelector: "nav.pagination",
        nextSelector: "nav.pagination a[rel=next]",
        itemSelector: "#articles div.article"
    });
  
  });
</script>